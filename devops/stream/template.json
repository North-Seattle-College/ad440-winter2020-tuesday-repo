{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "owner": {
            "type": "String",
            "metadata": {
                "description": "current user name"
            }
        }
        "email": {
            "type": "String",
            "metadata": {
                "description": "current user email"
            }
        }
        "jobName": {
            "type": "String",
            "metadata": {
                "description": "name of the current job"
            }
        }
        "iotHubName" : {
            "type" : "String",
            "metadata" : {
                "description" : "iothub being analyzed"
            }
        }
        "storage": {
            "type": "String",
            "metadata": {
                "description": "name of the blob storage"
            }
        }
        "resourceGroupName": {
            "type": "String",
            "metadata": {
                "description": "name of resource group being used"
            }
        }
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "location for the resources."
            }
        }
    },
    "variables": {
      "inputName":"[concat([parameters('owner')],'-rg-usw2-iothub')]"
      "outputName":"[concat([parameters('owner')],'-sg-usw2-storage')]"
    },
    "resources": [
        {
            "comment": "This starts the streaming job",
            "type": "Microsoft.StreamAnalytics/streamingjobs",
            "apiVersion": "2016-03-01",
            "name": "[parameters('jobName')]",
            "location": "[parameters('location')]",
            "tags": {
                "Owner": "[parameters('owner')]",
                "Application": "Pot-O-Gold",
                "OwnerEmail ": "[parameters('email')]",
            },
            "properties": {
                "sku": {
                    "name": "Standard"
                },
                "eventsOutOfOrderPolicy": "Adjust",
                "outputErrorPolicy": "Stop",
                "eventsOutOfOrderMaxDelayInSeconds": 0,
                "eventsLateArrivalMaxDelayInSeconds": 5,
                "dataLocale": "en-US",
                "compatibilityLevel": "1.1"
            }
        },
        {
            "comment": "This takes the input of the current stream from the current iot hub",
            "type": "Microsoft.StreamAnalytics/streamingjobs/inputs",
            "apiVersion": "2016-03-01",
            "name": "[variables('inputName')]",
            "dependsOn": [
                "[resourceId('Microsoft.StreamAnalytics/streamingjobs', parameters('jobName'))]"
            ],
            "properties": {
                "type": "Stream",
                "datasource": {
                    "type": "Microsoft.Devices/IotHubs",
                    "properties": {
                        "iotHubNamespace": "[parameters('iotHubName')]",
                        "sharedAccessPolicyName": "iothubowner",
                        "endpoint": "messages/events",
                        "consumerGroupName": "$Default"
                    }
                },
                "compression": {
                    "type": "None"
                },
                "partitionKey": "",
                "serialization": {
                    "type": "Json",
                    "properties": {
                        "encoding": "UTF8"
                    }
                },
                "etag": "86cf57a8-4b3e-4b94-a20b-851846b7b95f"
            }
        },
        {
            "comment": "This takes the output of the current stream",
            "type": "Microsoft.StreamAnalytics/streamingjobs/outputs",
            "apiVersion": "2016-03-01",
            "name": "[variables('outputName')]",
            "dependsOn": [
                "[resourceId('Microsoft.StreamAnalytics/streamingjobs', parameters('jobName'))]"
            ],
            "properties": {
                "datasource": {
                    "type": "Microsoft.Storage/Blob",
                    "properties": {
                        "blobPathPrefix": "",
                        "storageAccounts": [
                            {
                                "accountName": "[parameters('storage')]"
                            }
                        ],
                        "container": "[parameters('storage')]",
                        "pathPattern": "",
                        "dateFormat": "yyyy/MM/dd",
                        "timeFormat": "HH",
                        "authenticationMode": "ConnectionString"
                    }
                },
                "serialization": {
                    "type": "Json",
                    "properties": {
                        "encoding": "UTF8",
                        "format": "LineSeparated"
                    }
                }
            }
        }
    ]
}

{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "streamAnalyticsOwnerName": {
            "type": "String",
            "metadata": {
                "description": "This is the name of the current user/owner of the current job"
            }
        }
        "streamAnalyticsOwnerEmail": {
            "type": "String",
            "metadata": {
                "description": "This is the email of the current user/owner of this stream job"
            }
        }
        "streamAnalyticsJobName": {
            "defaultValue": "anonymous_job",
            "type": "String",
            "metadata": {
                "description": "This is the name of the current stream job"
            }
        }
        "streamAnalyticsAppName": {
            "defaultValue": "Pot-O-Gold",
            "type": "String",
            "metadata": {
                "description": "This is the name of the current app this is being used for"
            }
        }
        "streamAnalyticsStorageAccountName": {
            "defaultValue": "kiastrfeatusw2task3",
            "type": "String",
            "metadata": {
                "description": "This is the name of the current storage account this app uses"
            }
        }
        "streamAnalyticsFeature": {
            "defaultValue": "bet-rg-feat-usw2",
            "type": "String",
            "metadata": {
                "description": "This is the name of the current feature branch this app uses"
            }
        }
        "streamAnalyticsTaskName": {
            "defaultValue": "task2",
            "type": "String",
            "metadata": {
                "description": "This is the name of the current task"
            }
        }

    },
    "variables": {
        "streamAnalyticsInputName": "[concat(parameters(‘streamAnalyticsJobName’), '/', parameters('streamAnalyticsFeature'), '-input')]",
        "streamAnalyticsOutputName": "[concat(parameters(‘streamAnalyticsJobName’), '/', parameters('streamAnalyticsFeature'), '-output')]",
        "streamAnalyticsTaskName": "[concat(parameters('streamAnalyticsFeature'), parameters('streamAnalyticsTaskName'))]
    },
    "resources": [
        {
            "comment": "This starts the streaming job",
            "type": "Microsoft.StreamAnalytics/streamingjobs",
            "apiVersion": "2016-03-01",
            "name": "[parameters(‘streamAnalyticsJobName’)]",
            "location": "[resourceGroup().location]",
            "tags": {
                "Owner": "[parameters(‘streamAnalyticsOwnerName’)]",
                "Application": "[parameters(‘streamAnalyticsAppName’)]",
                "OwnerEmail ": "[parameters(‘streamAnalyticsOwnerEmail’)]",
                "Sprint": "1"
            },
            "properties": {
                "sku": {
                    "name": "Standard"
                },
                "eventsOutOfOrderPolicy": "Adjust",
                "outputErrorPolicy": "Stop",
                "eventsOutOfOrderMaxDelayInSeconds": 0,
                "eventsLateArrivalMaxDelayInSeconds": 5,
                "dataLocale": "en-US",
                "compatibilityLevel": "1.1"
            }
        },
        {
            "comment": "This takes the input of the current stream",
            "type": "Microsoft.StreamAnalytics/streamingjobs/inputs",
            "apiVersion": "2016-03-01",
            "name": "[variables('streamAnalyticsInputName')]",
            "dependsOn": [
                "[resourceId(‘Microsoft.StreamAnalytics/streamingjobs’, parameters(‘streamAnalyticsJobName’))]"
            ],
            "properties": {
                "type": "Stream",
                "datasource": {
                    "type": "Microsoft.Devices/IotHubs",
                    "properties": {
                        "iotHubNamespace": "[variables('streamAnalyticsTaskName')]",
                        "sharedAccessPolicyName": "iothubowner",
                        "endpoint": "messages/events",
                        "consumerGroupName": "$Default"
                    }
                },
                "compression": {
                    "type": "None"
                },
                "partitionKey": "",
                "serialization": {
                    "type": "Json",
                    "properties": {
                        "encoding": "UTF8"
                    }
                },
                "etag": "86cf57a8-4b3e-4b94-a20b-851846b7b95f"
            }
        },
        {
            "comment": "This takes the output of the current stream",
            "type": "Microsoft.StreamAnalytics/streamingjobs/outputs",
            "apiVersion": "2016-03-01",
            "name": "[variables('streamAnalyticsOutputName')]",
            "dependsOn": [
                "[resourceId(‘Microsoft.StreamAnalytics/streamingjobs’, parameters(‘streamAnalyticsJobName’))]"
            ],
            "properties": {
                "datasource": {
                    "type": "Microsoft.Storage/Blob",
                    "properties": {
                        "blobPathPrefix": "",
                        "storageAccounts": [
                            {
                                "accountName": "[parameters('streamAnalyticsStorageAccountName')]"
                            }
                        ],
                        "container": "jos-rg-feat-usw2-test-storage",
                        "pathPattern": "",
                        "dateFormat": "yyyy/MM/dd",
                        "timeFormat": "HH",
                        "authenticationMode": "ConnectionString"
                    }
                },
                "serialization": {
                    "type": "Json",
                    "properties": {
                        "encoding": "UTF8",
                        "format": "LineSeparated"
                    }
                }
            }
        }
    ]
}
